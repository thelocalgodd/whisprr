# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/whisprr
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/whisprr

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications and verification)
EMAIL_FROM=noreply@whisprr.com
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mp3,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (for sessions and caching - optional)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# WebRTC Configuration (optional)
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=turn:your-turn-server.com:3478
TURN_USERNAME=username
TURN_PASSWORD=password

# Database Backup (optional)
BACKUP_ENABLED=false
BACKUP_FREQUENCY=24h
BACKUP_RETENTION=7d
BACKUP_LOCATION=/backups